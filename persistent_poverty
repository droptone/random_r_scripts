PerPovData <- read.csv("data/persistent_poverty-full.csv")
library(rgeos)
library(maptools)
fips_dist <- readShapeSpatial("maps/fips/basic/US_County_AK_2000_2004.shp")
# if you want to check to see if it plots correctly: plot(fips_dist)
library(ggplot2)
fips_dist <- fortify(fips_dist, region = "FIPSNum")
fips_dist$id <- toupper(fips_dist$id)
pov <- ggplot()
pov <- pov + geom_map(data = PerPovData, aes(map_id = FIPS, fill = POV), colour = "grey10", lwd=.15, map = fips_dist)
pov <- pov + expand_limits(x = fips_dist$long, y = fips_dist$lat)
pov <- pov + theme(panel.background = element_rect(fill = "white"), line = element_blank())
pov <- pov + scale_fill_gradient2(low = "dodgerblue3", mid = "dodgerblue3", midpoint = .1, high = "firebrick2" , limits = c(0, 1))
pov <- pov + theme(legend.title=element_text(size=14))
print(pov)
